@model EditOrderViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Order</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label for="txtDescription">Description</label>
        <input asp-for="Description" type="text" class="form-control" readonly="readonly" id="txtDescription" >
    </div>
    <div class="form-group">
        <label for="txtStatus">Status</label>
        <input asp-for="CurrentStatus" type="text" class="form-control" readonly="readonly" id="txtStatus" >
    </div>
    <div class="form-group">
        <label for="cbStatus">Status</label>
        <select asp-for="Status" class="form-control" id="cbStatus">
            <option>Open</option>
            <option>Finish</option>
            <option>Cancel</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>


